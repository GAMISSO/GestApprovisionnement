@{
    ViewData["Title"] = "Approvisionnement Page";
}
@model IEnumerable<Models.Approvisionnement>
<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Gestion des Approvisionnements</h3>
        <a asp-controller="Approvisionnement" asp-action="Create" class="btn btn-primary">+ Nouvel
                approvisionnement</a>
    </div>

    <!-- Filtres -->
    <div class="card p-4 shadow-sm mb-4">
        <h6 class="fw-semibold mb-3">Filtres et recherche</h6>

        <div class="row g-3">

            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="Rechercher...">
            </div>

            <div class="col-md-3">
                <select class="form-select">
                    <option>Tous les fournisseurs</option>
                </select>
            </div>

            <div class="col-md-3">
                <select class="form-select">
                    <option>Tous les articles</option>
                </select>
            </div>

            <div class="col-md-3 d-flex gap-2">
                <input type="date" class="form-control">
            </div>

            <div class="col-md-3">
                <select class="form-select">
                    <option>Date (récent → ancien)</option>
                </select>
            </div>

            <div class="col-md-3 d-flex gap-2">
                <button class="btn btn-primary flex-grow-1">Filtrer</button>
                <button class="btn btn-outline-secondary flex-grow-1">Réinitialiser</button>
            </div>

        </div>
    </div>

    <!-- Tableau -->
    <div class="card shadow-sm">

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info m-3">la liste est vide</div>
        }

        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle text-center mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Référence</th>
                        <th>Date</th>
                        <th>Fournisseur</th>
                        <th>Articles</th>
                        <th>Montant total</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var approvisionnement in Model ?? new List<Models.Approvisionnement>())
                    {
                        <tr>
                            <td>@approvisionnement.Référence</td>
                            <td>@approvisionnement.DateApprovisionnement.ToString("dd/MM/yyyy")</td>
                            <td>@(approvisionnement.Fournisseur?.Nom ?? "—")</td>
                            <td><span class="btn btn-sm btn-info">@(approvisionnement.Detailss?.Count() ?? 0)</span></td>
                            <td>@(approvisionnement.MontantTotal ?? "0") FCFA</td>
                            <td><span class="badge bg-success">Reçu</span></td>
                            <td class="table-actions">
                                <div class="flex gap-2">
                                    <a asp-controller="Employe" asp-action="Index" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>Détails
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-center p-3">
            <nav>
                <ul class="pagination mb-0">
                    <li class="page-item"><a class="page-link" href="#">Précédent</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Suivant</a></li>
                </ul>
            </nav>
        </div>
    </div>

    <!-- Stats -->
    <div class="row mt-4 g-4">

        <div class="col-md-4">
            <div class="stat-card">
                <h6 class="text-muted">Total des approvisionnements</h6>
                <h3 class="fw-bold text-primary">2 720 000 FCFA</h3>
                <small class="text-muted">Période : Avril 2023</small>
            </div>
        </div>

        <div class="col-md-4">
            <div class="stat-card">
                <h6 class="text-muted">Nombre d’approvisionnements</h6>
                <h3 class="fw-bold">5</h3>
                <small class="text-muted">Période : Avril 2023</small>
            </div>
        </div>

        <div class="col-md-4">
            <div class="stat-card">
                <h6 class="text-muted">Fournisseur principal</h6>
                <h4 class="fw-bold text-primary">Textiles Dakar</h4>
                <small class="text-muted">1 430 000 FCFA (52.5%)</small>
            </div>
        </div>

    </div>

</div>