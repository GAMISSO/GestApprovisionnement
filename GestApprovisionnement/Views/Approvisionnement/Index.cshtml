@{
    ViewData["Title"] = "Approvisionnement Page";
}
@model IEnumerable<Models.Approvisionnement>
<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Gestion des Approvisionnements</h3>
        <a asp-controller="Approvisionnement"
                                asp-action="Create"><button class="btn btn-primary">+ Nouvel approvisionnement</button></a>
    </div>

    <!-- Filtres -->
    <div class="card p-4 shadow-sm mb-4">
        <h6 class="fw-semibold mb-3">Filtres et recherche</h6>

        <div class="row g-3">

            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="Rechercher...">
            </div>

            <div class="col-md-3">
                <select class="form-select">
                    <option>Tous les fournisseurs</option>
                </select>
            </div>

            <div class="col-md-3">
                <select class="form-select">
                    <option>Tous les articles</option>
                </select>
            </div>

            <div class="col-md-3 d-flex gap-2">
                <input type="date" class="form-control">
                <input type="date" class="form-control">
            </div>

            <div class="col-md-3">
                <select class="form-select">
                    <option>Date (r√©cent ‚Üí ancien)</option>
                </select>
            </div>

            <div class="col-md-3 d-flex gap-2">
                <button class="btn btn-primary flex-grow-1">Filtrer</button>
                <button class="btn btn-outline-secondary flex-grow-1">R√©initialiser</button>
            </div>

        </div>
    </div>

    <!-- Tableau -->
    <div class="card shadow-sm">

        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle text-center mb-0">
                <thead class="table-light">
                <tr>
                    <th>R√©f√©rence</th>
                    <th>Date</th>
                    <th>Fournisseur</th>
                    <th>Articles</th>
                    <th>Montant total</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
                </thead>

                <tbody>
                
                    @foreach (var departement in Model)
                    {
                        <tr>
                        <td>@departement.Id</td>
                        <td>@departement.DateApprovisionnement</td>
                        <td>@departement.Fournisseur.Nom</td>
                        <td><span class="btn btn-sm btn-info">@departement.Detailss.Count()</span></td>
                        <td>@departement.MontantTotal FCFA</td>
                        <td><span class="badge bg-success">Re√ßu</span></td>
                        <td class="table-actions">
                            <button class="btn btn-warning btn-sm text-white">‚úé</button>
                            <button class="btn btn-info btn-sm text-white">üëÅ</button>
                            <button class="btn btn-danger btn-sm">üóë</button>
                        </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-center p-3">
            <nav>
                <ul class="pagination mb-0">
                    <li class="page-item"><a class="page-link" href="#">Pr√©c√©dent</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Suivant</a></li>
                </ul>
            </nav>
        </div>
    </div>

    <!-- Stats -->
    <div class="row mt-4 g-4">

        <div class="col-md-4">
            <div class="stat-card">
                <h6 class="text-muted">Total des approvisionnements</h6>
                <h3 class="fw-bold text-primary">2 720 000 FCFA</h3>
                <small class="text-muted">P√©riode : Avril 2023</small>
            </div>
        </div>

        <div class="col-md-4">
            <div class="stat-card">
                <h6 class="text-muted">Nombre d‚Äôapprovisionnements</h6>
                <h3 class="fw-bold">5</h3>
                <small class="text-muted">P√©riode : Avril 2023</small>
            </div>
        </div>

        <div class="col-md-4">
            <div class="stat-card">
                <h6 class="text-muted">Fournisseur principal</h6>
                <h4 class="fw-bold text-primary">Textiles Dakar</h4>
                <small class="text-muted">1 430 000 FCFA (52.5%)</small>
            </div>
        </div>

    </div>

</div>